@page "/Hope"
@inject IJSRuntime JS

<h3>Hope</h3>
<button @onclick="DoIt">Do It!</button>
<div id="wrap">
    <div id="showcase">
        <div class="cloud9-item">
            <img src="images/1.jpeg" alt="img1"/>
        </div>
        <div class="cloud9-item">
            <img src="images/2.jpeg" alt="img2"/>
        </div>
        <div class="cloud9-item">
            <img src="images/3.jpeg" alt="img3"/>
        </div>
        <div class="cloud9-item">
            <img src="images/4.jpeg" alt="img4"/>
        </div>
        <div class="cloud9-item">
            <img src="images/5.jpeg" alt="img5"/>
        </div>
        <div class="cloud9-item">
            <img src="images/6.jpeg" alt="img6"/>
        </div>
    </div>
    
    <p id="item-title">What is this</p>
    
    <div class="nav noselect">
        <button class="left"><i class="oi oi-arrow-left"></i></button>
        <button class="right"><i class="oi oi-arrow-right"></i></button>
    </div>
    
</div>

@code {
   
    private async Task DoIt()
    {
        await JS.InvokeAsync<IJSObjectReference>("import", "./js/jquery.cloud9carousel.js");
        var module = await JS.InvokeAsync<IJSObjectReference>("import", "./js/HopePlease.js");
        await module.InvokeVoidAsync("init");
